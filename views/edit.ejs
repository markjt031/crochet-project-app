<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/header.ejs') %>
    <%- include('./partials/nav.ejs') %>
    <form action="/gallery/<%=project.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="container">
            <div class="container-item">
                <img id="image-preview" src="<%=project.img%>">
                <input id="upload-images" type="file" name="img" accept="image/*" />
            </div>
            <div class="container-item">
                    <div class="form-inputs">
                        <label for="name">Name:</label><input type="text" name="name" id="name" class="form-input" value="<%=project.name%>"><br/>
                        <label for="colors">Colors:</label><input type="text" name="colors" id="colors" class="form-input" value="<%=project.colors.join(', ')%>" placeholder="Enter yarn colors, separated by comma"/></label><br/>
                        <label for="yarnBrands">Yarn Brands:</label><input type="text" name="yarnBrands" id="yarn-brands" class="form-input" value="<%=project.yarnBrands.join(', ')%>" placeholder="Enter the brands of yarn, separated by comma"/><br/>
                        <label for="patternCredit">Pattern Credit:</label><input type="text" name="patternCredit" id="pattern-credit" class="form-input" value="<%=project.patternCredit%>"placeholder="Enter the name/site/book you found the pattern from"><br/>
                        <label for="completed">Completed:</label>
                        <select name="complete" class="form-input" id="complete">
                            <option value="Not Started" <% if (project.complete==="Not Started"){%>selected='selected'<%}%>>Not Started</option>
                            <option value="In Progress" <% if (project.complete==="In Progress"){%>selected='selected'<%}%>>In Progress</option>
                            <option value="Complete"<% if (project.complete==="Complete"){%>selected='selected'<%}%>>Complete</option>
                        </select><br/>
                        <label for="description">Description:</label><textarea name="description" id="description" class="form-input" value="<%=project.description%>"rows=5><%=project.description%></textarea><br/>
                        <input type="submit" value="submit" class='form-input'>
                    </div>
            </div>
        </div>
    </form>
    <script src="/js/eventListener.js"></script>
    
</body>
</html>