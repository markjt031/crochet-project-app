<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/header.ejs') %>
    <form action="/gallery" method="POST" enctype="multipart/form-data">
        <div class="container">
            <div class="container-item">
                <img id="image-preview" src="/uploads/20230309094926793_480x320.jpeg">
                <input id="upload-images" type="file" name="img" accept="image/*" />
            </div>
            <div class="container-item">
                    <div class="form-inputs">
                        <label for="name">Name:</label><input type="text" name="name" id="name" class="form-input"><br/>
                        <label for="colors">Colors:</label><input type="text" name="colors" id="colors" class="form-input" placeholder="Enter yarn colors, separated by comma"/></label><br/>
                        <label for="yarnBrands">Yarn Brands:</label><input type="text" name="yarnBrands" id="yarn-brands" class="form-input" placeholder="Enter the brands of yarn, separated by comma"/><br/>
                        <label for="patternCredit">Pattern Credit:</label><input type="text" name="patternCredit" id="pattern-credit" class="form-input" placeholder="Enter the name/site/book you found the pattern from"></br>
                        <label for="complete">Completed:</label>
                        <select name="complete" class="form-input" id="complete">
                            <option value="Not Started">Not Started</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Complete">Complete</option>
                        </select><br/>
                        <label for="description">Description:</label><textarea name="description" id="description" class="form-input" rows=5/></textarea><br/>
                        <input type="submit" value="submit" class='form-input'>
                    </div>
            </div>
        </div>
    </form>
    <script src="/js/eventListener.js"></script>
    
</body>
</html>