<%- include("../partials/head.ejs")%>
<body class="bg-pinkish">
    <%- include("../partials/header.ejs")%>
    <form action="/sessions" method="POST" class="login">
        <div class="mt-4">
            <label for="username" class="block">Username:</label>
            <input type="text" id="username" name="username" class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1">
            <label for="password" class="block">Password:</label>
            <input type="password" id="password" name="password" class="w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1">
            <input type="submit" class="px-6 py-2 mt-4 text-white bg-blue-600 rounded-lg hover:bg-blue-900"" value="Log In">
        </div>
        <div class="mx-auto">
            <% if (err){%>
                <p text-red><%=err%></p>
            <%}%>
        </div>
        <div class="container mx-auto">
           <p>New user? Register <a href="/users/new">here</a></p>
        </div>
    </form>
</body>
</html>